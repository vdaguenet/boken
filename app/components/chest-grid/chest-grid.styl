.chest-grid
  display table
  border-collapse separate
  -webkit-border-horizontal-spacing 18px
  -webkit-border-vertical-spacing 10px
  margin 0 auto
  padding-top 30px

.chest-grid-item
  width 80px
  height 80px
  background sand
  border 4px solid darksand
  border-radius 4px
  display table-cell
  vertical-align middle

  .icon
    width 50px
    margin auto
    display block

  .padlock
    height 35px
    margin auto
    display block