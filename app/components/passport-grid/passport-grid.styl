.passport-grid
  display table
  border-collapse separate
  -webkit-border-horizontal-spacing 30px
  -webkit-border-vertical-spacing 15px
  margin 0 auto
  text-align center

.passport-grid-item
  width 88px
  height 88px
  border-radius 4px
  display table-cell
  vertical-align middle
  position relative

  .icon
    margin 0 auto
    width 100px
    opacity 0.5

  .stamp
    position absolute
    top -8px
    left -8px

  .label
    color brown
    margin-top 15px
    text-transform uppercase
    font-size 18px