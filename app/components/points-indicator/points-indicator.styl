.points-indicator
  position absolute
  bottom 70px
  left 50%
  transform translateX(-50%)
  opacity 0

  &.seven-points
    .point:nth-child(5)
      margin-right 42px

    .point:last-child()
      margin-right 0

  .point
    width 22px
    height 22px
    display inline-block
    position relative
    margin-right 42px

    &.hidden
      display none

    &:nth-child(5)
      margin-right 0

    &.active .middle
      transform scale(1)

  .background
    width 100%
    height 100%
    border-radius 11px
    background #f1d59f
    opacity 0.6

  .middle
    width 12px
    height 12px
    border-radius 6px
    background #f6d75c
    opacity 0.8
    position absolute
    left 5px
    top 5px
    transform scale(0)
    transition transform 0.3s ease-out-back

