.sort-question

  .column
    width 50%
    float left
    text-align center
    margin-top 20px
    margin-bottom 42px

    h2
      font-size 18px
      text-transform uppercase

    .container
      margin-top 25px
      width 100%
      height 182px

  .column.right
    .container
      border-left 1px solid #b5b3a8

  .column.left
    .container
      border-right 1px solid #b5b3a8

  .proposal
    display inline-block
    position relative
    margin 0 12px
    padding 7px 16px

    .background
      background #efebe0
      border 2px solid #e4e2d8
      border-radius 5px

    span
      position relative

    &:first-child
      margin-left 0

    &:last-child
      margin-right 0

  .placeholder
    width 230px
    height 30px
    border 2px solid #e4e2d8
    border-radius 5px
    background #f6f4ec
    margin 0 auto 20px auto