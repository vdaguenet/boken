.exercice
  @extend .full-size-absolute
  color brown
  // display none
  // opacity 0

  &.active
    display block

  .background
    @extend .full-size-absolute

  .content
    width calc(85% - 30px)
    height calc(71.6% - 30px)
    position absolute
    margin auto
    background-image url('../assets/images/exercice/bg.jpg')
    background-size cover
    background-repeat no-repeat
    box-shadow 10px 10px 18px rgba(0, 0, 0, 0.07);
    top 0
    left 0
    right 0
    bottom 0
    border-radius 5px
    padding 15px
    text-align center

  .inner-content
    width 77%
    margin 0 auto

    .line-header
      margin-top 20px

    .middle-part
      height 365px

  .intro
    img
      height 150px

  .question p.message
    position absolute
    top 68px
    left 50%
    transform translateX(-50%)