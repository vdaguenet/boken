.exercice
  @extend .full-size-absolute
  display none
  opacity 0

  &.active
    display block

  .background
    @extend .full-size-absolute
    background black
    opacity 0.4

  .content
    width calc(75% - 30px)
    height calc(75% - 30px)
    position absolute
    margin auto
    background #f3eacc
    top 0
    left 0
    right 0
    bottom 0
    border-radius 15px
    padding 15px
    text-align center
    color #282828

    h1
      margin-top 30px

    .question
      width 100%
      height 80%