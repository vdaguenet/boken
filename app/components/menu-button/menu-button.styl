.menu-button

  &.selected
    .picto
      background-color rgba(255, 255, 255, 0.5)
      border-width 5px
      border-color rgba(159, 140, 115, 0.8)


  .picto
    width 100px
    height 100px
    border-radius 50px
    border 2px solid rgba(159, 140, 115, 0.3)
    background-color rgba(255, 255, 255, 0.35)
    margin 30px auto 11px auto
    transition border-width 0.4s ease-out-circ,
      background-color 0.4s ease-out-circ

    img
      width 68%
      position relative
      top 50%
      left 50%
      transform translateX(-50%) translateY(-50%)

  p
    @extend .font-serif
    text-align center
    color #7b705a
    text-transform uppercase
    font-size 15px