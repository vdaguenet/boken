.menu-button

  &.selected
    .picto
      background-color #f8f5ec // rgba(255, 255, 255, 0.5)
      border-width 8px
      border-color #ccaf73 // rgba(159, 140, 115, 0.8)

      &:after
        border-width 4px


  .picto
    width 100px
    height 100px
    border-radius 50px
    border 4px solid rgba(159, 140, 115, 0.3)
    background-color rgba(255, 255, 255, 0.35)
    margin 30px auto 11px auto
    transition border-width 0.4s ease-out-circ,
      background-color 0.4s ease-out-circ

    &:after
      content ''
      width calc(100% + 4px)
      height calc(100% + 4px)
      border 0 solid #ba9443
      display block
      position absolute
      border-radius inherit
      top -2px
      left -2px
      transition border-width 0.4s ease-out-circ

    img
      width 68%
      position relative
      top 50%
      left 50%
      transform translateX(-50%) translateY(-50%)

  p
    @extend .font-serif
    text-align center
    color #7b705a
    text-transform uppercase
    font-size 15px