.indicator-container
  width 341px
  height 173px
  position fixed
  z-index 1
  top 0
  left 0
  right 0
  bottom 0
  margin auto

.chapter-indication
  width 100%
  height 100%
  background-image url('../assets/images/chapter-indication.jpg');
  background-size contain
  padding-top 47px

  .chapter-header
    margin-top 0

    .header
      margin-bottom 18px

    .header:before,
    .header:after
      width 50px

    .header:before
      left -15px

    .header:after
      left 15px

    h1
      font-size 20.5px