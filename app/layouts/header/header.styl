header
  position fixed
  z-index 1
  right 25px
  top 25px

  .container
    position relative

  .header-button
    position relative
    width 60px
    height 60px
    display block
    background-image url('../assets/images/pictos/bag.svg')
    background-size contain
    background-position center center
    background-repeat no-repeat

    &.map
      opacity 0
      background-image url('../assets/images/pictos/map.png')
      position absolute
      top 0